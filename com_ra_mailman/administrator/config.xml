<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset label="RA Mailman" name="ra_mailman">
        <field name="email_header" 
               editor="|" 
               buttons="true" 
               filter="raw"
               type="editor" 
               default="Sent from xxx Ramblers using the MailMan software package" 
               label="Email Header" 
               description="Text at the top of all messages"/>
        <field name="email_footer" 
               filter="safehtml" 
               type="textarea" 
               default="The Ramblers, 13 Dirty Lane, London SE1 9PA" 
               label="System footer" 
               required="true"
               description="Text to appear at the end of every email" />
        <field name="website"
                type="text"
                label="Website address" 
                description="Used when creating links in emails for Renewals etc" 
                required="true"
                hint="https://xxxramblers.org.uk"/>
        <field
            name="members_leave"
            type="radio"
            label="When members leave:"
            description="Action to be taken when they drop off Insight file"
            default="B"
            >
            <option value="D">Delete all records, including for subscription, audit and mailshots sent</option>
            <option value="B">Block their User records</option>
        </field>        
        <field name="email_domain"
                type="text"
                label="Email domain" 
                description="When Users are blocked, they will be given a dummy email address in this domain " 
                default="ramblers.org.uk"
                showon="members_leave:B"
                hint="ramblers.org.uk"/>


    </fieldset>
    <fieldset name="colours" label="Colours">
        <field
            name="colour_header" 
            type="color" 
            default="#eee" 
            format="rgba"
            label="Header colour"
            description="Background colour of the email header"
        />
        <field
            name="colour_body" 
            type="color" 
            default="#eee" 
            format="rgba"
            label="Body colour"
            description="Background colour of the email body"
        />
        <field
            name="colour_footer" 
            type="color" 
            default="#eee" 
            format="rgba"
            label="Footer colour"
            description="Background colour of the email footer"
        />
    </fieldset>
    <fieldset label="Logo" name="logo">  
        <field name="note1" type="note" label="If the file is found in folder /images/com_ra_mailman, it will be added to the top of each email."/>      
        <field name="logo_file"
                type="text"
                label="Logo" 
                description="name of logo to be displayed at top of each email" 
                required="true"
                hint="Logo.png"/>
        <field name="note2" type="note" label="You can specify here the size at which it should be displayed."/>
                <field name="height"
               maxlength="3" 
               filter="safehtml" 
               type="text" 
               label="Height" 
               description="Height of the image, in pixels" 
               default="90"/>     
        <field name="width"
               maxlength="3" 
               filter="safehtml" 
               type="text" 
               label="Width" 
               description="Width of the image, in pixels" 
               default="90"/>             
        <field
            name="logo_align"
            type="radio"
            label="Logo alignment:"
            description="Whether logo should float to the right or to the left"
            default="right"
            >
            <option value="right">Right</option>
            <option value="left">Left</option>
        </field>    
    </fieldset>
    <fieldset label="Registration" name="registration">
        <field name="welcome_message"
               maxlength="255" 
               filter="safehtml" 
               type="text" 
               label="Welcome message" 
               description="Message to be shown after successful registration" 
               default="Thank you for registering."/> 
        <field name="email_new_user" 
               type="user" 
               label="User to be notified" 
               description="User to be notified when new User signs up" 
               hint="webmaster@....."/>
    </fieldset>
    <fieldset label="Batch mode" name="batch_mode">
        <field name="email_detail"
               maxlength="255" 
               filter="safehtml" 
               type="text" 
               label="Email details" 
               description="Details of 'From': Name,email address"
               hint="MailMan,webmaster@....."/>
        <field name="notify_interval" 
               first="7" last="35" 
               step="2" 
               type="integer" 
               default="28" 
               label="Notify inteval (days)" 
               description="How long in advace a reminder should be sent" 
               hint="28"/>
    </fieldset> 
    <fieldset name="permissions" description="JCONFIG_PERMISSIONS_DESC" label="JCONFIG_PERMISSIONS_LABEL">
        <field name="rules" 
               type="rules" 
               component="com_ra_mailman" 
               class="inputbox" 
               filter="rules" 
               validate="rules" 
               label="JCONFIG_PERMISSIONS_LABEL" 
               section="component" />
    </fieldset>

    <fieldset name="component">
        <field
            name="save_history"
            type="radio"
            default="0"
            label="JGLOBAL_SAVE_HISTORY_OPTIONS_LABEL"
            description="JGLOBAL_SAVE_HISTORY_OPTIONS_DESC"
            layout="joomla.form.field.radio.switcher"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field name="history_limit" type="text" filter="integer" label="JGLOBAL_HISTORY_LIMIT_OPTIONS_LABEL" description="JGLOBAL_HISTORY_LIMIT_OPTIONS_DESC" default="5"/>

        <field
          name="sef_ids"
          type="radio"
          layout="joomla.form.field.radio.switcher"
          default="0"
          label="JGLOBAL_SEF_NOIDS_LABEL"
          description="JGLOBAL_SEF_NOIDS_DESC"
          filter="integer"
          >
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
    </fieldset>
</config>
